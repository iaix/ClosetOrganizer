@model ClothItem
@{
}

    <form asp-action="EditConfirm" method="post" class="form-horizontal" role="form">
        <h1>Editing @Model.Name</h1>
        <input type="hidden" asp-for="@Model.ClothItemId" />
        <div class="form-row">
            <label asp-for="Name" class="col-md-2 control-label">Name of the item</label>
            <input asp-for="Name" class="form-control" />
            <label asp-for="ShortDescription" class="col-md-2 control-label">Short description</label>
            <input asp-for="ShortDescription" class="form-control" />
        </div>
        <div class="form-row">
            <label asp-for="Style" class="col-md-2 control-label"></label>
            <select class="col-md-2 form-control" asp-for="@Model.Style" asp-items="Html.GetEnumSelectList<ClothingStyle>()"></select>
            <label asp-for="Color" class="col-md-2 control-label"></label>
            <select class="col-md-2 form-control" asp-for="@Model.Color" asp-items="Html.GetEnumSelectList<ClothingColor>()"></select>
        </div>

        <div class="form-row">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            @await Component.InvokeAsync("CategoryList")
        </div>
        <div class="form-group form-check">
            <input class="form-check-input" asp-for="IsWearable" />
            <label asp-for="IsWearable" class="form-check-label"></label>
        </div>

        <div class="form-group">
            <div class="col-md-5">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </form>
